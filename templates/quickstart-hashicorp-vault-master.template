        }
      }
    },
    "Resources": {
      "VPCStack": {
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "TemplateURL": {
            "Fn::Join": [
              "/", [{
                  "Fn::FindInMap": [
                    "AWSInfoRegionMap", {
                      "Ref": "AWS::Region"
                    },
                    "QuickStartS3URL"
                  ]
                }, {
                  "Ref": "QSS3BucketName"
                }, {
                  "Ref": "QSS3KeyPrefix"
                },
                "submodules/quickstart-aws-vpc/templates/aws-vpc.template"
              ]
            ]
          },
          "Parameters": {
            "AvailabilityZones": {
              "Fn::Join": [
                ",", {
                  "Ref": "AvailabilityZones"
                }
              ]
            },
            "KeyPairName": {
              "Ref": "KeyPairName"
            },
            "NATInstanceType": {
              "Ref": "NATInstanceType"
            },
            "NumberOfAZs": "3",
            "PrivateSubnet1ACIDR": {
              "Ref": "PrivateSubnet1CIDR"
            },
            "PrivateSubnet2ACIDR": {
              "Ref": "PrivateSubnet2CIDR"
            },
            "PrivateSubnet3ACIDR": {
              "Ref": "PrivateSubnet3CIDR"
            },
            "PublicSubnet1CIDR": {
              "Ref": "PublicSubnet1CIDR"
            },
            "PublicSubnet2CIDR": {
              "Ref": "PublicSubnet2CIDR"
            },
            "PublicSubnet3CIDR": {
              "Ref": "PublicSubnet3CIDR"
            },
            "VPCCIDR": {
              "Ref": "VPCCIDR"
            }
          }
        }
      },
      "HashiCorpConsulStack": {
        "DependsOn": "VPCStack",
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "TemplateURL": {
            "Fn::Join": [
              "/", [{
                  "Fn::FindInMap": [
                    "AWSInfoRegionMap", {
                      "Ref": "AWS::Region"
                    },
                    "QuickStartS3URL"
                  ]
                }, {
                  "Ref": "QSS3BucketName"
                }, 
                "hashicorp/consul/latest/templates/quickstart-hashicorp-consul.template"
              ]
            ]
          },
          "Parameters": {
            "AvailabilityZones": {
              "Fn::Join": [
                ",", {
                  "Ref": "AvailabilityZones"
                }
              ]
            },
            "PrivateSubnet1ID": {
              "Fn::GetAtt": [
                  "VPCStack",
                  "Outputs.PrivateSubnet1AID"
              ]
            },
            "PrivateSubnet2ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PrivateSubnet2AID"
                ]
            },
            "PrivateSubnet3ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PrivateSubnet3AID"
                ]
            },
            "PublicSubnet1ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PublicSubnet1ID"
                ]
            },
            "PublicSubnet2ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PublicSubnet2ID"
                ]
            },
              "PublicSubnet3ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PublicSubnet3ID"
                ]
            },
            "VPCID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.VPCID"
                ]
            },
            "PrivateSubnet1CIDR": {
              "Ref": "PublicSubnet1CIDR"
            },
            "PrivateSubnet2CIDR": {
              "Ref": "PublicSubnet2CIDR"
            },
            "PrivateSubnet3CIDR": {
              "Ref": "PublicSubnet3CIDR"
            },
            "PublicSubnet1CIDR": {
              "Ref": "PublicSubnet1CIDR"
            },
            "PublicSubnet2CIDR": {
              "Ref": "PublicSubnet2CIDR"
            },
            "PublicSubnet3CIDR": {
              "Ref": "PublicSubnet3CIDR"
            },
            "VPCCIDR": {
                "Ref": "VPCCIDR"
            },
            "ConsulServerNodes": {
              "Ref": "ConsulServerNodes"
            },
            "ConsulClientNodes": {
              "Ref": "ConsulClientNodes"
            },
            "ConsulInstanceType": {
              "Ref": "ConsulInstanceType"
            },
            "KeyPair": {
              "Ref": "KeyPairName"
            },
            "AccessCIDR": {
              "Ref": "AccessCIDR"
            },
            "QuickStartS3URL": {
            "Fn::Join": [
                "/", [{
                    "Fn::FindInMap": [
                      "AWSInfoRegionMap", {
                          "Ref": "AWS::Region"
                          },
                        "QuickStartS3URL"
                      ]
                    }
                  ]
                ]
              },
            "QSS3KeyPrefix": "hashicorp/consul/latest"
          }
        }
      },
      "HashiCorpVaultStack": {
        "DependsOn": "HashiCorpConsulStack",
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "TemplateURL": "https://github.com/T-Wong/quickstart-hashicorp-vault/raw/develop/templates/quickstart-hashicorp-vault-master.template",
          "Parameters": {
            "PrivateSubnet1ID": {
              "Fn::GetAtt": [
                  "VPCStack",
                  "Outputs.PrivateSubnet1AID"
              ]
            },
            "PrivateSubnet2ID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.PrivateSubnet2AID"
                ]
            },
            "VPCID": {
                "Fn::GetAtt": [
                    "VPCStack",
                    "Outputs.VPCID"
                ]
            },
            "ConsulSeedPrivateIP": {
                "Fn::GetAtt": [
                    "HashiCorpConsulStack",
                    "Outputs.ConsulSeedPrivateIP"
                ]
            },
            "VPCCIDR": {
                "Ref": "VPCCIDR"
            },
            "KeyPair": {
              "Ref": "KeyPairName"
            },
            "AccessCIDR": {
              "Ref": "AccessCIDR"
            },
            "EmailAddress": {
              "Ref": "EmailAddress"
            },
            "VaultInstanceType": {
              "Ref": "VaultInstanceType"
            },
            "QuickStartS3URL": {
            "Fn::Join": [
                "/", [{
                    "Fn::FindInMap": [
                      "AWSInfoRegionMap", {
                          "Ref": "AWS::Region"
                          },
                        "QuickStartS3URL"
                      ]
                    }
                  ]
                ]
              },
            "QSS3KeyPrefix": {
              "Ref": "QSS3KeyPrefix"
            }
          }
        }
      }
    }
  }
