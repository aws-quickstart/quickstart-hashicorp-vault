                      "01_make_parent_dir": {
                        "command": "mkdir /var/chef",
                        "mode": "000755",
                        "owner": "root",
                        "group": "root"
                      },
                      "02_generate_repo": {
                        "command": "chef generate repo /var/chef/chef-repo",
                        "cwd": "/var/chef"
                      },
                      "03_untar_cookbook": {
                        "command": "tar -xzvf /tmp/tyw_hashicorp_vault.tar.gz",
                        "cwd": "/var/chef/chef-repo/cookbooks"
                      },
                      "04_pull_dependencies": {
                        "command": "berks vendor /var/chef/chef-repo/cookbooks",
                        "cwd": "/var/chef/chef-repo/cookbooks/tyw_hashicorp_vault-master",
                        "env": { "HOME" : "/var/chef" }
                      }
                    }
                  },
                  "run_chef": {
                    "commands": {
                      "01_run_chef_client": {
                        "command": "chef-client -z -r tyw_hashicorp_vault::default",
                        "cwd": "/var/chef/chef-repo/cookbooks/tyw_hashicorp_vault-master",
                        "env": { "HOME" : "/var/chef" }
                      }
                    }
                  }
              }
