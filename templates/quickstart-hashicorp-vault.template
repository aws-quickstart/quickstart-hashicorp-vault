                                            "ConsulEc2RetryTagKey": {
                                                "Ref": "ConsulEc2RetryTagKey"
                                            },
                                            "ConsulEc2RetryTagValue": {
                                                "Ref": "ConsulEc2RetryTagValue"
                                            },
                                            "QSS3BucketName": {
                                                "Ref": "QSS3BucketName"
                                            },
                                            "QSS3KeyPrefix": {
                                                "Fn::Join": [
                                                    "/",
                                                    [
                                                        {
                                                            "Ref": "QSS3KeyPrefix"
                                                        },
                                                        "submodules/quickstart-hashicorp-consul"
                                                    ]
                                                ]
                                            }
                                        }
                                    ]
                                },
                                "\n",
                                "/usr/local/bin/cfn-init",
                                " --verbose ",
                                " --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                " --resource Vault1",
                                " --configsets vault_install",
                                " --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n",
                                "/usr/local/bin/cfn-signal -e $? ",
                                "  --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                " --resource Vault1 ",
                                " --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n"
                            ]
                        ]
                    }
                },
                "IamInstanceProfile": {
                    "Ref": "vaultinstanceprofile"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "AWS::StackName"
                                    },
                                    "Vault1"
                                ]
                            ]
                        }
                    }
                ]
            }
        },
