                                "source": {
                                    "Fn::Sub": [
                                        "https://s3.amazonaws.com/${QSS3BucketName}/${QSS3KeyPrefix}/scripts/vault.service",
                                        {
                                            "QSS3BucketName": {
                                                "Ref": "QSS3BucketName"
                                            },
                                            "QSS3KeyPrefix": {
                                                "Ref": "QSS3KeyPrefix"
                                            }
                                        }
                                    ]
                                },
                                "mode": "000700",
                                "owner": "root",
                                "group": "root"
                            }
                        },
