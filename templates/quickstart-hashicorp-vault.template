                          }
                      }
                  },
                  "install_chefdk": {
                    "commands": {
                      "01_install_chefdk": {
                        "command": "curl -LO https://omnitruck.chef.io/install.sh && sudo bash ./install.sh -v 1.1.16 -P chefdk && rm install.sh"
                      }
                    }
                  },
                  "pull_cookbooks": {
                    "files" : {
                      "/tmp/tyw_hashicorp_vault.tar.gz": {
                        "source": "https://github.com/T-Wong/tyw_hashicorp_vault/archive/master.tar.gz",
                        "mode": "000700",
                        "owner": "root",
                        "group": "root"
                      }
                    },
