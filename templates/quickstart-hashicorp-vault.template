                            }
                        }
                    },
                    "run_vault": {
                        "commands": {
                            "01_register_vault_binary": {
                                "command": "chmod 755 vault",
                                "command": "update-rc.d  vault  defaults",
                                "command": "update-rc.d  vault  enable",
                                "cwd": "/etc/init.d/"
                            }
                        }
                    }
                }
            },
            "Properties": {
                "InstanceType": {
                    "Ref": "VaultInstanceType"
                },
                "KeyName": {
                    "Ref": "KeyPair"
                },
                "NetworkInterfaces": [{
                    "DeleteOnTermination": "true",
                    "DeviceIndex": 0,
                    "SubnetId": {
                        "Ref": "PrivateSubnet1ID"
                    },  
                    "GroupSet": [{
                        "Ref": "VaultSecGroup"
                    }]  
                }],
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSAMIRegionMap", {
                            "Ref": "AWS::Region"
                        },
                        "US1404HVM"
                    ]
                },
                "BlockDeviceMappings": [{
                    "DeviceName": "/dev/sda1",
                    "Ebs": {
                        "VolumeSize": "20",
                        "VolumeType": "gp2"
                    }
                }],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "", [
                                "#!/bin/bash -e\n",
                                "mkdir -p /opt/vault/policies/ /opt/vault/scripts/ /etc/vault.d/\n",
                                "apt-get -y update\n",
                                "#install the cfn-init tools\n",
                                "apt-get -y install python-pip\n",
                                "pip install pyOpenSSL ndg-httpsclient pyasn1\n",
                                "easy_install https://s3.amazonaws.com/cloudformation-examples/aws-cfn-bootstrap-latest.tar.gz\n",
                                "ln -s /root/aws-cfn-bootstrap-latest/init/ubuntu/cfn-hup /etc/init.d/cfn-hup\n",
                                "/usr/local/bin/cfn-init",
                                " --verbose ",
                                " --stack ", {
                                    "Ref": "AWS::StackName"
                                },
                                " --resource Vault1",
                                " --configsets vault_install",
                                " --region ", {
                                    "Ref": "AWS::Region"
                                }, "\n",
                                "CONSULMASTER=",
                                {
                                  "Ref": "ConsulMasterPrivateIP"
                                },"\"\n",
                                "sed -i -e  s/__CONSULMASTER__/${CONSULMASTER}/ /etc/vault.d/vault.hcl",
                                "\n",
                                "echo \"Starting Vault Server \" \n",
                                "vault server -config /etc/vault.d/vault.hcl",
                                "\n",
                                "/usr/local/bin/cfn-signal -e $? ",
                                "  --stack ", {
                                    "Ref": "AWS::StackName"
                                },
                                " --resource Vault1 ",
                                " --region ", {
                                    "Ref": "AWS::Region"
                                }, "\n"
                            ]
                        ]
                    }
                },
                "IamInstanceProfile": {
                    "Ref": "vaultinstanceprofile"
                },
                "Tags": [{
                    "Key": "Name",
                    "Value": {
                        "Fn::Join": [
                            "-", [{
                                    "Ref": "AWS::StackName"
                                },
                                "Vault1"
                            ]
                        ]
                    }
                }]
            }
        },
